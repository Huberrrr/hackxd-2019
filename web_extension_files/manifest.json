{
  "manifest_version": 2,

  "name": "Oculis",
  "description": "Extract important keywords in a terms and conditions document.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  }
}